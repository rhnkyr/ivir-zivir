        type="text/javascript"></script>

<script src="{{ constant('BASE') }}templates/assets/plugins/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="{{ constant('BASE') }}templates/assets/plugins/jquery-validation/dist/additional-methods.min.js"></script>
<script src="{{ constant('BASE') }}templates/assets/scripts/form-components.js"></script>

<script src="{{ constant('BASE') }}templates/assets/scripts/app.js"></script>
<!-- todo dahan sonra kontrol edilecek -->
<script src="{{ constant('BASE') }}templates/assets/uploadify/jquery.uploadify.min.js"></script>
<script src="{{ constant('BASE') }}templates/assets/js/panel.js"></script>
<script src="{{ constant('BASE') }}templates/assets/scripts/form-validation.js"></script>

<script>
    jQuery(document).ready(function () {
        // initiate layout and plugins
        App.init();
        App.initUniform();
        //FormComponents.init();
        FormValidation.init();
        PNL.baseUrl = FormValidation.url = '{{ constant('BASE') }}panel/';
        PNL.uploadUrl = '{{ constant('BASE') }}';

        {% if list %}
        $(function() {
            $("#contentLeft ul").sortable({ opacity: 0.6, cursor: 'move', update: function() {
                var order = $(this).sortable("serialize");
                $.post(PNL.baseUrl + "updateSliderOrder", order, function(){
                    alert("Sıralama değiştirildi");
                });
            }
            });
        });
        {% endif %}
    });
</script>


</body>
</html>