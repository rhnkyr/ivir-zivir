<script src="{{ constant('BASE') }}templates/assets/plugins/jquery-migrate-1.2.1.min.js"
        type="text/javascript"></script>
<!-- IMPORTANT! Load jquery-ui-1.10.1.custom.min.js before bootstrap.min.js to fix bootstrap tooltip conflict with jquery ui tooltip -->
<script src="{{ constant('BASE') }}templates/assets/plugins/jquery-ui/jquery-ui-1.10.1.custom.min.js"
        type="text/javascript"></script>
<script src="{{ constant('BASE') }}templates/assets/plugins/bootstrap/js/bootstrap.min.js"
        type="text/javascript"></script>

<!--[if lt IE 9]>
<script src="{{ constant('BASE') }}templates/assets/plugins/excanvas.min.js"></script>
<script src="{{ constant('BASE') }}templates/assets/plugins/respond.min.js"></script>
<![endif]-->

<script src="{{ constant('BASE') }}templates/assets/plugins/jquery-slimscroll/jquery.slimscroll.min.js"
        type="text/javascript"></script>
<script src="{{ constant('BASE') }}templates/assets/plugins/jquery.blockui.min.js" type="text/javascript"></script>

<script src="{{ constant('BASE') }}templates/assets/plugins/uniform/jquery.uniform.min.js"
        type="text/javascript"></script>
<!-- END CORE PLUGINS -->
<!-- BEGIN PAGE LEVEL PLUGINS -->
<script src="{{ constant('BASE') }}templates/assets/plugins/jquery-validation/dist/jquery.validate.min.js"
        type="text/javascript"></script>
<!-- END PAGE LEVEL PLUGINS -->
<!-- BEGIN PAGE LEVEL SCRIPTS -->
<script src="{{ constant('BASE') }}templates/assets/scripts/app.js" type="text/javascript"></script>
<script src="{{ constant('BASE') }}templates/assets/scripts/login.js" type="text/javascript"></script>
<!-- END PAGE LEVEL SCRIPTS -->
<script>
    jQuery(document).ready(function () {
        App.init();
        Login.init();
    });
</script>
<!-- END JAVASCRIPTS -->
</body>
<!-- END BODY -->
</html>
